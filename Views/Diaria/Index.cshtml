@model ICollection<DiariaSummary>

<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-header">
        <div class="card-title">@ViewData["title"]</div>
        <div class="card-tools">

        </div>
      </div>
      <div class="card-body">
        @if (Model.Count <= 0)
        {
          <div>
            Nenhuma diária cadastrada.
          </div>
        }
        else
        {
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>#</th>
                <th>Status</th>
                <th>Nome Cliente</th>
                <th>Nome Diarista</th>
                <th>Chave Pix</th>
                <th>Data Atendimento</th>
                <th>Preço</th>
                <th>Comissão</th>
                <th>Transferencia</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var diaria in Model)
              {
                <tr>
                  <td>@diaria.Id</td>
                  <td>@diaria.Status</td>
                  <td>@diaria.NomeCliente</td>
                  <td>@diaria.NomeDiarista</td>
                  <td>@diaria.ChavePix</td>
                  <td>@diaria.DataAtendimento</td>
                  <td>@diaria.Preco</td>
                  <td>@diaria.Comissao</td>
                  <td>@diaria.Transferencia</td>
                </tr>
              }
            </tbody>
          </table>
        }
      </div>
    </div>
  </div>
</div>